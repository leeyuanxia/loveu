<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/p_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.04"
        android:background="#00ffffff"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/cl_user_info_bar"
        android:background="@color/white"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintTop_toBottomOf="@+id/p_bar">

        <org.raphets.roundimageview.RoundImageView
            android:id="@+id/iv_user_icon"
            android:src="@mipmap/icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:type="circle"
            android:layout_marginLeft="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:maxLength="8"
            android:text="@string/not_login"
            android:textSize="14sp"
            android:textColor="@color/_333333"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iv_user_icon"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/cl_user_info_bar"
        app:layout_constraintHeight_percent="0.89"
        >
      <!--  <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible"
            android:id="@+id/cl_null_memory_add"
            android:paddingVertical="10dp"
            android:paddingHorizontal="15dp"
            android:background="@drawable/border_blue_raduis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/icon_puls"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@mipmap/icon_plus"/>
            <TextView
                app:layout_constraintLeft_toRightOf="@+id/icon_puls"
                android:textSize="14sp"
                android:textColor="@color/_666666"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/null_memory"
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>-->
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_memory_home"
            android:background="@color/white"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:visibility="gone"
            android:id="@+id/cl_setting_view_background"
            android:background="#44333333"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/bt_bottom_add"
            android:layout_width="60dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@mipmap/icon_button_add"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp"
            android:layout_height="60dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_setting_view"
        android:layout_width="match_parent"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/cl_user_info_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#00000000"
        app:layout_constraintHeight_percent="0.89"
        android:layout_height="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.35"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/cl_setting_view_click_area"
            android:layout_height="match_parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/cl_setting_view_left"
            android:layout_width="0dp"
            android:background="@color/white"
            app:layout_constraintWidth_percent="0.65"
            android:layout_height="match_parent">
            <TextView
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="20dp"
                android:textSize="14sp"
                android:id="@+id/tv_home_login_hint"
                android:text="@string/home_login_hint"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="30dp"
                android:textColor="@color/_999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="130dp"
                android:paddingVertical="10dp"
                android:id="@+id/cl_home_setting_privacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/iv_home_setting_icon_privacy"
                        android:layout_width="30dp"
                        android:src="@mipmap/icon_privacy"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_height="30dp"/>
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:text="@string/setting_privacy"
                        app:layout_constraintLeft_toRightOf="@+id/iv_home_setting_icon_privacy"
                        android:layout_width="wrap_content"
                        android:textColor="@color/_333333"
                        android:textSize="15sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="10dp"
                android:paddingVertical="10dp"
                android:id="@+id/cl_home_setting_version"
                app:layout_constraintTop_toBottomOf="@+id/cl_home_setting_privacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="25dp"
                    android:id="@+id/cl_home_setting_privacy_container"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/iv_home_setting_icon_version"
                        android:layout_width="30dp"
                        android:src="@mipmap/icon_version"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_height="30dp"/>
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:text="@string/setting_version"
                        app:layout_constraintLeft_toRightOf="@+id/iv_home_setting_icon_version"
                        android:layout_width="wrap_content"
                        android:textColor="@color/_333333"
                        android:textSize="15sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="10sp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="10dp"
                    android:text="1.2.0.110"
                    android:id="@+id/tv_version"
                    android:textColor="@color/_999999"
                    app:layout_constraintTop_toTopOf="@+id/cl_home_setting_privacy_container"
                    app:layout_constraintBottom_toBottomOf="@+id/cl_home_setting_privacy_container"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="10dp"
                android:paddingVertical="10dp"
                android:visibility="gone"
                android:id="@+id/cl_home_setting_user_info"
                app:layout_constraintTop_toBottomOf="@+id/cl_home_setting_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="25dp"
                    android:id="@+id/cl_home_setting_user_info_container"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/iv_home_setting_icon_user_info"
                        android:layout_width="30dp"
                        android:src="@mipmap/icon_userinfo"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_height="30dp"/>
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:text="@string/setting_userinfo"
                        app:layout_constraintLeft_toRightOf="@+id/iv_home_setting_icon_user_info"
                        android:layout_width="wrap_content"
                        android:textColor="@color/_333333"
                        android:textSize="15sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/tv_login"
                android:textColor="@color/_0099ff"
                android:text="@string/login"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/cl_home_setting_user_info"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/view_add_memory"
        android:background="@color/_eeeeee"
        app:layout_constraintHeight_percent="0.96"
        app:layout_constraintTop_toBottomOf="@+id/p_bar"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/iv_add_memory_view_bg"
            android:src="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/cl_add_memory_top_bar"
            android:paddingHorizontal="20dp"
            android:background="@color/transparent"
            app:layout_constraintHeight_percent="0.07"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/iv_add_memory_close"
                android:src="@mipmap/icon_close"
                android:layout_width="35dp"
                android:layout_height="35dp"/>
            <TextView
                android:textSize="17sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/_333333"
                android:text="@string/add_memory_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/iv_add_memory_ok"
                android:src="@mipmap/icon_ok"
                android:layout_width="35dp"
                android:layout_height="35dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@+id/cl_add_memory_top_bar"
            android:paddingVertical="15dp"
            android:background="@color/transparent"
            android:paddingHorizontal="25dp"
            android:id="@+id/cl_add_memory_tittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_add_memory_tittle_left"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.35"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_icon_add_memory_title"
                    android:src="@mipmap/ic_message"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/_333333"
                    android:text="@string/add_memory_title_text"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:id="@+id/cl_add_memory_tittle_right"
                app:layout_constraintWidth_percent="0.65"
                app:layout_constraintTop_toTopOf="@+id/ll_add_memory_tittle_left"
                app:layout_constraintBottom_toBottomOf="@+id/ll_add_memory_tittle_left"
                app:layout_constraintLeft_toRightOf="@+id/ll_add_memory_tittle_left"
                android:layout_height="0dp">
                <EditText
                    style="@null"
                    android:background="@null"
                    android:textColor="@color/_333333"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:maxLength="20"
                    android:hint="@string/please_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@+id/cl_add_memory_tittle"
            android:paddingVertical="15dp"
            android:paddingHorizontal="25dp"
            android:background="@color/transparent"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/cl_add_memory_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_add_memory_date_left"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.35"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_icon_add_date_title"
                    android:src="@mipmap/ic_menu_calendar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/_333333"
                    android:text="@string/add_memory_date_text"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:id="@+id/cl_add_memory_date_right"
                app:layout_constraintWidth_percent="0.65"
                app:layout_constraintTop_toTopOf="@+id/ll_add_memory_date_left"
                app:layout_constraintBottom_toBottomOf="@+id/ll_add_memory_date_left"
                app:layout_constraintLeft_toRightOf="@+id/ll_add_memory_date_left"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/tv_add_view_date"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="@color/_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_width="20dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@mipmap/ic_arrow_right"
                    android:layout_height="25dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@+id/cl_add_memory_date"
            android:paddingVertical="15dp"
            android:paddingHorizontal="25dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/cl_add_memory_repeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_add_memory_repeat_left"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.35"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_icon_add_repeat_title"
                    android:src="@mipmap/ic_refresh"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/_333333"
                    android:text="@string/add_memory_repeat_text"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:id="@+id/cl_add_memory_repeat_right"
                app:layout_constraintWidth_percent="0.65"
                app:layout_constraintTop_toTopOf="@+id/ll_add_memory_repeat_left"
                app:layout_constraintBottom_toBottomOf="@+id/ll_add_memory_repeat_left"
                app:layout_constraintLeft_toRightOf="@+id/ll_add_memory_repeat_left"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/tv_add_view_repeat"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="@color/_333333"
                    android:text="无"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_width="20dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@mipmap/ic_arrow_right"
                    android:layout_height="25dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@+id/cl_add_memory_repeat"
            android:paddingVertical="15dp"
            android:paddingHorizontal="25dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/cl_add_memory_remind_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_add_memory_remind_time_left"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.35"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_icon_add_remind_time_title"
                    android:src="@mipmap/ic_alert_time"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/_333333"
                    android:text="@string/add_memory_remind_time_text"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:id="@+id/cl_add_memory_remind_time_right"
                app:layout_constraintWidth_percent="0.65"
                app:layout_constraintTop_toTopOf="@+id/ll_add_memory_remind_time_left"
                app:layout_constraintBottom_toBottomOf="@+id/ll_add_memory_remind_time_left"
                app:layout_constraintLeft_toRightOf="@+id/ll_add_memory_remind_time_left"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/tv_add_view_remind_time"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="@color/_333333"
                    android:text="无"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_width="20dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@mipmap/ic_arrow_right"
                    android:layout_height="25dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@+id/cl_add_memory_remind_time"
            android:paddingVertical="15dp"
            android:paddingHorizontal="25dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/cl_add_memory_if_remind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_add_memory_if_remind"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.35"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_icon_add_memory_if_remind_title"
                    android:src="@mipmap/ic_over_head"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/_333333"
                    android:text="@string/add_memory_if_remind_text"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:id="@+id/cl_add_memory_if_remind_right"
                app:layout_constraintWidth_percent="0.65"
                app:layout_constraintTop_toTopOf="@+id/ll_add_memory_if_remind"
                app:layout_constraintBottom_toBottomOf="@+id/ll_add_memory_if_remind"
                app:layout_constraintLeft_toRightOf="@+id/ll_add_memory_if_remind"
                android:layout_height="0dp">
                <com.kyleduo.switchbutton.SwitchButton
                    android:id="@+id/switch_button_if_remind"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
