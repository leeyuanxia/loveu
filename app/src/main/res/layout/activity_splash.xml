<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/splash_bg"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="5dp"
        android:id="@+id/cl_loading_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="20dp"
        android:background="@drawable/circleshape_gray"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <com.mingle.widget.LoadingView
            android:id="@+id/lv_loading_toast"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@+id/lv_loading_toast"
            app:layout_constraintTop_toTopOf="@+id/lv_loading_toast"
            app:layout_constraintBottom_toBottomOf="@+id/lv_loading_toast"
            android:layout_marginLeft="20dp"
            android:textColor="@color/_333333"
            android:textStyle="bold"
            android:text="@string/loading_toast"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>