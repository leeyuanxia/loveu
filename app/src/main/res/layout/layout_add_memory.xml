<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/view_add_memory"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mPuppet0"
        android:background="@color/_eeeeee"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/p_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.04"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintHeight_percent="0.96"
        app:layout_constraintTop_toBottomOf="@+id/p_bar"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/iv_add_memory_view_bg"
            android:src="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/cl_add_memory_top_bar"
            android:paddingHorizontal="20dp"
            android:background="@color/transparent"
            app:layout_constraintHeight_percent="0.07"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/iv_add_memory_close"
                android:src="@mipmap/icon_close"
                android:layout_width="35dp"
                android:layout_height="35dp"/>
            <TextView
                android:textSize="17sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/_333333"
                android:text="@string/add_memory_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/iv_add_memory_ok"
                android:src="@mipmap/icon_ok"
                android:layout_width="35dp"
                android:layout_height="35dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@+id/cl_add_memory_top_bar"
            android:paddingVertical="15dp"
            android:background="@color/transparent"
            android:paddingHorizontal="25dp"
            android:id="@+id/cl_add_memory_tittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_add_memory_tittle_left"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.35"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_icon_add_memory_title"
                    android:src="@mipmap/ic_message"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/_333333"
                    android:text="@string/add_memory_title_text"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:id="@+id/cl_add_memory_tittle_right"
                app:layout_constraintWidth_percent="0.65"
                app:layout_constraintTop_toTopOf="@+id/ll_add_memory_tittle_left"
                app:layout_constraintBottom_toBottomOf="@+id/ll_add_memory_tittle_left"
                app:layout_constraintLeft_toRightOf="@+id/ll_add_memory_tittle_left"
                android:layout_height="0dp">
                <EditText
                    style="@null"
                    android:background="@null"
                    android:textColor="@color/_333333"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:maxLength="20"
                    android:hint="@string/please_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@+id/cl_add_memory_tittle"
            android:paddingVertical="15dp"
            android:paddingHorizontal="25dp"
            android:background="@color/transparent"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/cl_add_memory_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_add_memory_date_left"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.35"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_icon_add_date_title"
                    android:src="@mipmap/ic_menu_calendar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/_333333"
                    android:text="@string/add_memory_date_text"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:id="@+id/cl_add_memory_date_right"
                app:layout_constraintWidth_percent="0.65"
                app:layout_constraintTop_toTopOf="@+id/ll_add_memory_date_left"
                app:layout_constraintBottom_toBottomOf="@+id/ll_add_memory_date_left"
                app:layout_constraintLeft_toRightOf="@+id/ll_add_memory_date_left"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/tv_add_view_date"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="@color/_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_width="20dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@mipmap/ic_arrow_right"
                    android:layout_height="25dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@+id/cl_add_memory_date"
            android:paddingVertical="15dp"
            android:paddingHorizontal="25dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/cl_add_memory_repeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_add_memory_repeat_left"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.35"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_icon_add_repeat_title"
                    android:src="@mipmap/ic_refresh"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/_333333"
                    android:text="@string/add_memory_repeat_text"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:id="@+id/cl_add_memory_repeat_right"
                app:layout_constraintWidth_percent="0.65"
                app:layout_constraintTop_toTopOf="@+id/ll_add_memory_repeat_left"
                app:layout_constraintBottom_toBottomOf="@+id/ll_add_memory_repeat_left"
                app:layout_constraintLeft_toRightOf="@+id/ll_add_memory_repeat_left"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/tv_add_view_repeat"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="@color/_333333"
                    android:text="无"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_width="20dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@mipmap/ic_arrow_right"
                    android:layout_height="25dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@+id/cl_add_memory_repeat"
            android:paddingVertical="15dp"
            android:paddingHorizontal="25dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/cl_add_memory_remind_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_add_memory_remind_time_left"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.35"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_icon_add_remind_time_title"
                    android:src="@mipmap/ic_alert_time"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/_333333"
                    android:text="@string/add_memory_remind_time_text"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:id="@+id/cl_add_memory_remind_time_right"
                app:layout_constraintWidth_percent="0.65"
                app:layout_constraintTop_toTopOf="@+id/ll_add_memory_remind_time_left"
                app:layout_constraintBottom_toBottomOf="@+id/ll_add_memory_remind_time_left"
                app:layout_constraintLeft_toRightOf="@+id/ll_add_memory_remind_time_left"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/tv_add_view_remind_time"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="@color/_333333"
                    android:text="无"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_width="20dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@mipmap/ic_arrow_right"
                    android:layout_height="25dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@+id/cl_add_memory_remind_time"
            android:paddingVertical="15dp"
            android:paddingHorizontal="25dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/cl_add_memory_if_remind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_add_memory_if_remind"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.35"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_icon_add_memory_if_remind_title"
                    android:src="@mipmap/ic_over_head"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/_333333"
                    android:text="@string/add_memory_if_remind_text"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:id="@+id/cl_add_memory_if_remind_right"
                app:layout_constraintWidth_percent="0.65"
                app:layout_constraintTop_toTopOf="@+id/ll_add_memory_if_remind"
                app:layout_constraintBottom_toBottomOf="@+id/ll_add_memory_if_remind"
                app:layout_constraintLeft_toRightOf="@+id/ll_add_memory_if_remind"
                android:layout_height="0dp">
                <com.kyleduo.switchbutton.SwitchButton
                    android:id="@+id/switch_button_if_remind"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@+id/cl_add_memory_if_remind"
            android:paddingVertical="15dp"
            android:paddingHorizontal="25dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/cl_add_memory_care"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_add_memory_care"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.35"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_icon_add_memory_care_title"
                    android:src="@mipmap/icon_care"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/_333333"
                    android:text="@string/add_memory_care_text"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:id="@+id/cl_add_memory_care_right"
                app:layout_constraintWidth_percent="0.65"
                app:layout_constraintTop_toTopOf="@+id/ll_add_memory_care"
                app:layout_constraintBottom_toBottomOf="@+id/ll_add_memory_care"
                app:layout_constraintLeft_toRightOf="@+id/ll_add_memory_care"
                android:layout_height="0dp">
                <com.kyleduo.switchbutton.SwitchButton
                    android:id="@+id/switch_button_care"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@+id/cl_add_memory_care"
            android:paddingVertical="15dp"
            android:paddingHorizontal="25dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/cl_add_memory_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_add_memory_bg"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.35"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_icon_add_memory_bg_title"
                    android:src="@mipmap/ic_image"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/_333333"
                    android:text="@string/add_memory_bg_text"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:id="@+id/cl_add_memory_bg_right"
                app:layout_constraintWidth_percent="0.65"
                app:layout_constraintTop_toTopOf="@+id/ll_add_memory_bg"
                app:layout_constraintBottom_toBottomOf="@+id/ll_add_memory_bg"
                app:layout_constraintLeft_toRightOf="@+id/ll_add_memory_bg"
                android:layout_height="0dp">
                <com.kyleduo.switchbutton.SwitchButton
                    android:id="@+id/switch_button_bg"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@+id/cl_add_memory_bg"
            android:paddingVertical="15dp"
            android:paddingHorizontal="25dp"
            android:id="@+id/cl_add_memory_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_add_memory_content"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.35"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_icon_add_memory_content_title"
                    android:src="@mipmap/ic_remark"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/_333333"
                    android:text="@string/add_memory_content_text"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:id="@+id/cl_add_memory_content_right"
                app:layout_constraintWidth_percent="0.65"
                app:layout_constraintTop_toTopOf="@+id/ll_add_memory_content"
                app:layout_constraintBottom_toBottomOf="@+id/ll_add_memory_content"
                app:layout_constraintLeft_toRightOf="@+id/ll_add_memory_content"
                android:layout_height="0dp">
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/tv_content_length"
            app:layout_constraintTop_toBottomOf="@id/cl_add_memory_content"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="14sp"
            android:layout_marginRight="20dp"
            android:textColor="@color/_333333"
            android:text="0/144"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_add_memory_content"
            android:inputType="textMultiLine"
            app:layout_constraintTop_toBottomOf="@+id/tv_content_length"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@null"
            android:paddingHorizontal="25dp"
            android:background="@null"
            android:hint="@string/remember_what"
            android:gravity="top"
            android:paddingTop="7dp"
            android:textSize="15sp"
            android:maxLength="144"
            android:textColor="@color/_333333"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>